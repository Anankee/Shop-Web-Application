@model IEnumerable<Library.Models.Product>

<table class="table table-sm table-bordered table-hover table-striped">
    <tr class="thead-dark">
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            Options
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
             <td>
                 <img style="height: 50px;" src="@item.ImageUrl" alt="@item.Name image" />
            </td>
            <td>
                <a class="btn btn-primary btn-sm text-white" onclick="openProductModal(@item.Id)">Edit</a>
                <a class="btn btn-danger btn-sm text-white" onclick="DeleteProduct(@item.Id)">Delete</a>
            </td>
        </tr>
    }
</table>
